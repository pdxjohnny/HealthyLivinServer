<?xml version="1.0" encoding="UTF-8"?>
<project name="webserver" default="all">
  
  
  <property file="webserver.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.junit-4.12.classpath">
    <pathelement location="${basedir}/lib/junit-4.12.jar"/>
  </path>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_webserver.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.webserver" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.webserver" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.database" value="${basedir}/out/artifacts/Database"/>
    <property name="artifact.output.tests" value="${basedir}/out/artifacts/Tests"/>
    <property name="artifact.output.web" value="${basedir}/out/artifacts/Web"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Database.jar" value="${artifacts.temp.dir}/Database.jar"/>
    <property name="temp.jar.path.Tests.jar" value="${artifacts.temp.dir}/Tests.jar"/>
    <property name="temp.jar.path.Web.jar" value="${artifacts.temp.dir}/Web.jar"/>
  </target>
  
  <target name="artifact.database" depends="init.artifacts, compile.module.webserver" description="Build &#39;Database&#39; artifact">
    <property name="artifact.temp.output.database" value="${artifacts.temp.dir}/Database"/>
    <mkdir dir="${artifact.temp.output.database}"/>
    <jar destfile="${temp.jar.path.Database.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${webserver.output.dir}"/>
      <zipfileset file="${basedir}/src/Database/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.Database.jar}" tofile="${artifact.temp.output.database}/Database.jar"/>
  </target>
  
  <target name="artifact.tests" depends="init.artifacts, compile.module.webserver" description="Build &#39;Tests&#39; artifact">
    <property name="artifact.temp.output.tests" value="${artifacts.temp.dir}/Tests"/>
    <mkdir dir="${artifact.temp.output.tests}"/>
    <jar destfile="${temp.jar.path.Tests.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/lib/junit-4.12.jar"/>
      <zipfileset dir="${webserver.output.dir}"/>
      <zipfileset file="${basedir}/src/Tests/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.Tests.jar}" tofile="${artifact.temp.output.tests}/Tests.jar"/>
  </target>
  
  <target name="artifact.web" depends="init.artifacts, compile.module.webserver" description="Build &#39;Web&#39; artifact">
    <property name="artifact.temp.output.web" value="${artifacts.temp.dir}/Web"/>
    <mkdir dir="${artifact.temp.output.web}"/>
    <jar destfile="${temp.jar.path.Web.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${webserver.output.dir}"/>
      <zipfileset file="${basedir}/src/Web/META-INF/MANIFEST.MF" prefix="META-INF"/>
    </jar>
    <copy file="${temp.jar.path.Web.jar}" tofile="${artifact.temp.output.web}/Web.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.database, artifact.tests, artifact.web" description="Build all artifacts">
    <mkdir dir="${artifact.output.database}"/>
    <copy todir="${artifact.output.database}">
      <fileset dir="${artifact.temp.output.database}"/>
    </copy>
    <mkdir dir="${artifact.output.tests}"/>
    <copy todir="${artifact.output.tests}">
      <fileset dir="${artifact.temp.output.tests}"/>
    </copy>
    <mkdir dir="${artifact.output.web}"/>
    <copy todir="${artifact.output.web}">
      <fileset dir="${artifact.temp.output.web}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>